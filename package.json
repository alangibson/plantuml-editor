{
  "name": "plantuml-editor",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "flow": "flow",
    "vue-cli-service": "vue-cli-service",
    "serve": "vue-cli-service serve --open",
    "dev": "vue-cli-service serve",
    "build": "vue-cli-service build && cat atlassian-connect.tmpl.json | envsubst > atlassian-connect.json && cp atlassian-connect.json dist/",
    "test": "vue-cli-service test",
    "e2e": "vue-cli-service e2e",
    "lint": "vue-cli-service lint",
    "e2e:open": "vue-cli-service e2e:open",
    "firebase": "firebase",
    "deploy": "npm run build && firebase deploy"
  },
  "dependencies": {
    "@atlassian/aui": "^7.10.1",
    "@atlassian/connect-module-core": "^2.1.5",
    "atlassian-connect-js": "^5.2.16",
    "axios": "^0.19.0",
    "bootstrap": "3.3.7",
    "clipboard": "1.7.1",
    "dexie": "2.0.1",
    "dragscroll": "0.0.8",
    "font-awesome": "4.7.0",
    "github-api": "^3.3.0",
    "jquery": "^3.4.1",
    "lodash": "^4.17.15",
    "marked": "0.3.9",
    "plantuml-encoder": "1.2.4",
    "plantuml-encoder-decoder": "^1.2.5-2",
    "print-js": "1.0.40",
    "vee-validate": "2.0.0-rc.23",
    "vue": "^2.6.10",
    "vue-codemirror": "4.0.1",
    "vue-lazyload": "1.2.3",
    "vue-loader": "^15.7.1",
    "vue-router": "^3.1.3",
    "vuex": "3.0.1",
    "vuex-persistedstate": "^2.5.2"
  },
  "devDependencies": {
    "@babel/preset-flow": "^7.0.0",
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-e2e-cypress": "^3.11.0",
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-plugin-unit-jest": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "@vue/eslint-config-prettier": "^3.0.5",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^22.4.4",
    "copy-webpack-plugin": "^4.6.0",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-flowtype-errors": "^3.6.0",
    "firebase-tools": "^7.3.2",
    "flow-bin": "^0.108.0",
    "http-server": "^0.11.1",
    "local-web-server": "^2.6.1",
    "node-sass": "^4.12.0",
    "sass-loader": "^6.0.6",
    "vue-template-compiler": "^2.6.10"
  },
  "babel": {
    "presets": [
      "@vue/app",
      "@babel/preset-flow"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "plugins": [
      "flowtype",
      "flowtype-errors"
    ],
    "rules": {
      "flowtype-errors/show-errors": 2,
      "flowtype-errors/show-warnings": 1,
      "flowtype/boolean-style": 2,
      "flowtype/define-flow-type": 2,
      "flowtype/no-dupe-keys": 2,
      "flowtype/no-primitive-constructor-types": 2,
      "flowtype/require-parameter-type": 2,
      "flowtype/require-return-type": 2,
      "flowtype/require-valid-file-annotation": 2,
      "flowtype/require-variable-type": 2,
      "flowtype/use-flow-type": 2
    }
  },
  "eslintIgnore": [
    "tests/*",
    "vue.config.js"
  ],
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "<rootDir>/(tests/unit/**/*.spec.(ts|tsx|js)|**/__tests__/*.(ts|tsx|js))"
    ]
  }
}

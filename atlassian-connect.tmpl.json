{
  "key": "power-plant-uml",
  "name": "PowerPlantUML",
  "description": "A powerful Plant UML editor",
  "vendor": {
    "name": "Alan Gibson",
    "url": "https://powerplantuml.firebaseapp.com"
  },
  "baseUrl": "$BASEURL",
  "links": {
    "self": "${BASEURL}/atlassian-connect.json",
    "homepage": "${BASEURL}/atlassian-connect.json"
  },
  "authentication": {
    "type": "none"
  },
  "scopes": [
    "read",
    "write"
  ],
  "modules": {
    "staticContentMacros": [
      {
        "key": "power-plant-uml-macro",
        "name": {
          "value": "PowerPlantUML"
        },
        "url": "/confluence/static-macro?url={url}&encodedUML={encodedUML}&imageType={imageType}&language={language}",
        "description": {
          "value": "PowerPlantUML Static Macro"
        },
        "icon": {
					"width": 128,
					"height": 128,
					"url": "/logo.png"
				},
        "outputType": "block",
        "featured": true,
        "width": "100%",
        "bodyType": "none",
        "parameters": [
          {
            "identifier": "url",
            "name": {
              "value": "URL"
            },
            "description": {
              "value": "PlantUML URL."
            },
            "type": "string",
            "required": false
          },
          {
            "identifier": "doc",
            "name": {
              "value": "PlantUML document"
            },
            "description": {
              "value": "PlantUML document"
            },
            "type": "string",
            "required": true
          },
          {
            "identifier": "encodedUML",
            "name": {
              "value": "Encoded PlantUML"
            },
            "description": {
              "value": "Encoded PlantUML"
            },
            "type": "string",
            "required": true
          },
          {
            "identifier": "imageType",
            "name": {
              "value": "PlantUML image type"
            },
            "description": {
              "value": "PlantUML image type"
            },
            "type": "string",
            "required": true
          },
          {
            "identifier": "language",
            "name": {
              "value": "Language type"
            },
            "description": {
              "value": "Language type"
            },
            "type": "string",
            "required": false
          }
        ],
        "editor": {
          "url": "/confluence/editor",
          "editTitle": {
            "value": "Edit PowerPlant UML"
          },
          "insertTitle": {
            "value": "Insert PowerPlant UML"
          },
          "cacheable": false,
          "width": "100%",
          "height": "100%"
        },
        "imagePlaceholder": {
          "url": "/confluence/image-placeholder",
          "applyChrome": true
        }
      }
    ],
    "dialogs": [
      {
        "url": "/dialog",
        "options": {
          "size": "fullscreen",
          "header": {
            "value": "PowerPlant UML Dialog"
          },
          "chrome": false,
          "closeOnEscape": true
        },
        "key": "power-plant-uml-dialog"
      }
    ]
  }
}